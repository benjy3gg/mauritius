<?xml version="1.0" encoding="utf-8"?>


<com.support.android.mauritius.SquareRelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="drinkImage"
        android:src="@drawable/cheese_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
            android:id="@+id/item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="placeholder"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@color/teal_500_a"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="16dp"
        android:autoText="false" />

    <cn.bingoogolapple.badgeview.BGABadgeTextView
            android:id="@+id/badgeRating"
            android:textColor="@android:color/white"
            android:padding="16dp"
            app:badge_bgColor="?colorAccent"
            app:badge_textSize="16sp"
            app:badge_padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatar"
            android:layout_alignRight="@+id/avatar"
            android:layout_alignEnd="@+id/avatar" />
</com.support.android.mauritius.SquareRelativeLayout>

